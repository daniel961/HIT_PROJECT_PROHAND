<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/buttonstyle5"
    android:id="@+id/ItemParentLayout"
    android:layout_marginBottom="5dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/UserPhoto"
        android:background="@drawable/userimage"/>

    <TextView
        android:id="@+id/ProName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ProCategory"
        android:text="דניאל כהן"

        android:textColor="@color/Black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ProCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="115dp"
        android:text="טכנאי מקררים"
        android:textColor="@color/Black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ProNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/UserPhoto"
        android:layout_alignStart="@+id/ProName"
        android:text="0548088610"
        android:textColor="@color/Black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/medalImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/medals_counter_tv"
            android:src="@drawable/medal"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כמות מדליות"
            android:textSize="10sp"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/medals_counter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="0"
            android:layout_marginLeft="23dp"
            android:textColor="@color/Black" />


    </LinearLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:visibility="gone"
        android:id="@+id/ShowMoreDetailsLayout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="57dp"
            android:layout_marginStart="117dp"
            android:text="Email"
            android:id="@+id/EmailTV"
            android:textColor="@color/Black"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/CallColor"
            android:text="התקשר"
            android:id="@+id/CallBtn"
            android:textColor="@color/White"
            android:textSize="25sp" />

        <Button
            android:id="@+id/AddMedal"
            android:visibility="visible"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/EmailTV"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"
            android:text="תן לו מדליה"
            android:textColor="@color/White"
            android:textSize="15sp" />






    </RelativeLayout>


</RelativeLayout>




